{
  "name": "ts-import-resolver",
  "description": "Lightweight, fast utility that resolves TypeScript import paths to absolute file paths without TypeScript compiler overhead. Zero dependencies.",
  "version": "0.1.23",
  "type": "module",
  "files": [
    "dist"
  ],
  "module": "./dist/index.js",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.cts"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/node": "^22.14.1",
    "bumpp": "^10.1.0",
    "bunup": "^0.8.19",
    "husky": "^9.1.7",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arshad-yaseen/ts-import-resolver.git"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "keywords": [
    "typescript",
    "import",
    "path",
    "resolver",
    "typescript-import",
    "module-resolution"
  ],
  "homepage": "https://github.com/arshad-yaseen/ts-import-resolver#readme",
  "scripts": {
    "build": "bunup",
    "dev": "bunup --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "tsc": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "release": "bumpp --commit --push --tag",
    "publish:ci": "pnpm publish --access public --no-git-checks"
  }
}